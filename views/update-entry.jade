extends layout

block content

  div(class="main-single-entry")
    h6
      a(href="/")
        |  <i class="material-icons">assignment_return</i> <span>Back</span>
    form(method="post" class="update-form form" action="/entry/#{entry._id}/edit")
      label(for="author") Author
      input(type="text" name="author" value='#{entry.author}')
      label(for="title") Title
      input(type="text" name="entryTitle" value="#{entry.entryTitle}")
      label(for="message") Entry
      textarea(type="text" name="entryBody" value="") #{entry.entryBody}
      button(type="submit" class="submit") Submit
      button(class="cancel")
        a(href="/") Cancel
